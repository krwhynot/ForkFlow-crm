{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2019",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "types": [
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src",
        "src/@types/**/*"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}